@model List<TaskInSystem>
@{
    ViewData["Title"] = "Задачи";
    var user = (User)ViewBag.User;
}

<section>
    <div class="container">
        @if (Model.Count == 0)
        {
            <div class="text-center">
                <h1 style="margin-top: 25%">Здесь пока ничего нет... 😭</h1>
                <a asp-controller="Home" asp-action="AddTask" class="btn btn-dark col-md-4 mt-4">Добавить задание</a>
            </div>
        }
            <div class="row">
                @foreach (var temp in Model)
                {
                    <div class="col-md-4 mt-2">
                        <div class="card">
                            <a href="@Url.Action("Task")/@temp.Id" class="p-3">
                                <h5>@temp.Title</h5>
                                <p class="m-0">@temp.Text</p>
                                <p class="m-0">От кого: @temp.ToUser.GetFullName()</p>
                                <p class="m-0">Кому: @temp.FromUser.GetFullName()</p>
                                <p class="m-0">DeadLine: @temp.DeadLine</p>
                            </a>
                        </div>
                    </div>
                }
            </div>
    </div>
</section>
<a asp-controller="Home" asp-action="AddTask" class="text-dark">
    <i class="fas fa-plus-circle position-fixed" style="bottom: 65px; right: 15px; font-size: 50px;"></i>
</a>
   