@using System.Text
@{
    var user = (User)ViewBag.User;
}

<div id="inputForm" class="mt-5">
    <input type="text" id="message" />
    <input type="button" id="sendBtn" value="Отправить" />
</div>

<div class="col-md-12 mt-2 p-0">
    <div id="chatroom" class="mb-2">
        @foreach (var post in ViewBag.Messages)
        {
            <p><b>@post.Author</b>: @post.Message <span id="date">@post.CreatedDate.ToString("g")</span></p>
        }
    </div>
</div>
@*@User.Identity.Name*@
<script src="/signalr.min.js"></script>
<script>
    let hubUrl = 'https://localhost:5001/chat';
    const hubConnection = new signalR.HubConnectionBuilder()
        .withUrl(hubUrl)
        .configureLogging(signalR.LogLevel.Information)
        .build();

    var userName = `@user.GetFullName()`;

    hubConnection.on('Send', function (message, userName, createdDate) {

        let userNameElem = document.createElement("b");
        userNameElem.appendChild(document.createTextNode(userName + ': '));

        let elem = document.createElement("p");
        //elem.appendChild(userNameElem);
        //elem.appendChild(document.createTextNode(message));

        let dateElem = document.createElement("span");
        elem.appendChild(userNameElem);
        elem.appendChild(document.createTextNode(message));
        elem.appendChild(document.createTextNode(" "+createdDate));

        var firstElem = document.getElementById("chatroom").firstChild;
        document.getElementById("chatroom").insertBefore(elem, firstElem);

    });

    document.getElementById("sendBtn").addEventListener("click", function (e) {
        let message = document.getElementById("message").value;
        hubConnection.invoke('Send', message, userName);
    });

    hubConnection.start();
</script>