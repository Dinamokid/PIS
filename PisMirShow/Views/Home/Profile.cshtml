
@{
    ViewData["Title"] = "Личный кабинет";
}

@*TO-DO:
    Добавить номер телефона
    Подгрузка пикчей из базы*@

<h1 class="mt-5">Профиль пользователя</h1>
@if (User.Identity.IsAuthenticated)
{
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h4 class="mt-5">Имя: @ViewBag.User.GetFullName()</h4>
                    <h4 class="mt-3">Email: @ViewBag.User.Email</h4>
                    <h4 class="mt-3">Дата рождения: @ViewBag.User.BirthdayDay</h4>
                    <h4 class="mt-3">Должность: @ViewBag.User.OfficePost</h4>
                    <h4 class="mt-3">Отдел: @ViewBag.User.Department</h4>
                    <h4 class="mt-3">Номер телефона: @ViewBag.User.GetFullName()</h4>
                </div>
                <div class="col-md-4 mt-5 text-center">
                    <div style="background-image: url('https://sun9-50.userapi.com/c604828/v604828581/226f9/PL6DvrFtzJk.jpg'); background-size: cover; background-position:top center; width: 250px; height: 250px" class="rounded-circle"></div>
                </div>
            </div>
        </div>
    </section>


}

