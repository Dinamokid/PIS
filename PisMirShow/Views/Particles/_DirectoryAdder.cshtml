@model DirectoryData

<form asp-action="AddDirectoryData" asp-controller="Home" method="post">
	<div class="form-group">
		<input class="form-control" id="Title" asp-for="Title" placeholder="Заголовок" required>
	</div>
	<div class="form-group">
		<textarea asp-for="Text" rows="4" id="Text" class="form-control" placeholder="Информация" required></textarea>
	</div>
	<button type="submit" class="btn btn-primary">Добавить</button>
</form>