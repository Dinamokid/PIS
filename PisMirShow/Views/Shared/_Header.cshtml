<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">myCRM</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Моя лента</a>
                    </li>
                    <li class="nav-item @*active*@">
                        <a class="nav-link" asp-controller="Home" asp-action="AllTasks">Задания</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="AllFiles">Список файлов</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Documents">Справочник</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">О системе</a>
                    </li>
                </ul>
            }
            @if (User.Identity.IsAuthenticated)
            {
                <div class="btn-group">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="far fa-user mr-1"> </i>  @ViewBag.User.GetFullName()
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" asp-controller="Home" asp-action="Profile">Мой кабинет</a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Выход</a>
                    </div>
                </div>
            }
            
            @*<form class="form-inline my-2 my-lg-0">
                <button class="btn btn-outline-danger my-2 my-sm-0" asp-controller="Account" asp-action="Logout">Выход</button>
            </form>*@
        </div>
    </nav>
</header>